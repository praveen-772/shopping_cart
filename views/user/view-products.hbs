<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 20rem">
                    <img class="card-img-top" style="height: 15rem" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Name: {{this.Name}}</h5>
                        <p class="card-text">Description: {{this.Description}}</p>
                        <p class="card-text">Category: {{this.Category}}</p>
                        <p class="card-text">Price: {{this.Price}}</p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>